<resources>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/jj_green_dark</item>
        <item name="colorAccent">@color/jj_green</item>
        <item name="colorPrimary">@color/background_green</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--Size of text-->
    <style name="TextAppearance.Green.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/jj_green</item>
    </style>

    <style name="TextAppearance.Green.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/jj_green</item>
    </style>

    <style name="TextAppearance.Green.Large" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/jj_green</item>
    </style>

    <style name="TextAppearance.Black.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextAppearance.Black.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextAppearance.Black.Large" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextAppearance.Grey.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextAppearance.Grey.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextAppearance.Grey.Large" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
</resources>
