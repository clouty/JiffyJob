<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_132451">

    <ImageView
        android:id="@+id/backgroundIV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/darkBackgroundFillIV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#30000000"
        android:visibility="visible" />

    <TextView
        android:id="@+id/salaryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:minWidth="100dp"
        android:padding="5dp"
        android:text="$100/day"
        android:textColor="@color/text_white"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:id="@+id/companyNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="Company name"
        android:textColor="@color/text_white"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/salaryTV"
        android:weightSum="1">

        <TextView
            android:id="@+id/mainContentTV"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.65"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="5dp"
            android:text="Main content"
            android:textColor="@color/text_white"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <ImageView
            android:id="@+id/fillImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainContentLayout"
        android:weightSum="1">

        <TextView
            android:id="@+id/subContentTV"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.6"
            android:ellipsize="end"
            android:maxLines="2"
            android:minWidth="200dp"
            android:padding="5dp"
            android:text="11 July - 25 July 2015 \n8pm - 2am @ Central Orchard hotel"
            android:textColor="@color/text_white"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textStyle="italic" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:gravity="end">

            <ImageButton
                android:id="@+id/favoriteBtn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_state_favorite_light" />

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/favoriteBtn"
                android:background="@drawable/btn_state_share_light" />

            <ImageButton
                android:id="@+id/applyBtn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/shareBtn"
                android:background="@drawable/btn_state_addperson_light" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
