<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.9"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="STEP 2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text_default_material_light" />

        <TextView
            android:id="@+id/subTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTV"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Job Information"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_green" />

        <LinearLayout
            android:id="@+id/scopeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_below="@id/subTitleTV"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/scopeET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Add scope"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/addScopeBtn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/xhdpi_add" />
        </LinearLayout>

        <ListView
            android:id="@+id/scopeListView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/scopeLayout"
            android:divider="#00FFCC00"
            android:dividerHeight="0dp"
            android:fadeScrollbars="false"
            android:focusable="true"
            android:maxHeight="140dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/numericLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scopeListView"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age range"
                android:textColor="@color/text_green" />

            <EditText
                android:id="@+id/fromAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="4"
                android:hint="minAge"
                android:inputType="number"
                android:maxLength="2"
                android:text="16"
                android:textAppearance="?android:textAppearanceSmall" />

            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:background="@color/text_green" />

            <EditText
                android:id="@+id/toAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:hint="maxAge"
                android:inputType="number"
                android:maxLength="2"
                android:textAppearance="?android:textAppearanceSmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiring pax"
                    android:textColor="@color/text_green" />

                <EditText
                    android:id="@+id/totalPax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ems="3"
                    android:hint="pax"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="1"
                    android:textAppearance="?android:textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numericLayout"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/hashTagET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Add hash tag"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/addHashTagBtn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/xhdpi_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/minEduTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numericLayout"
            android:layout_marginTop="5dp"
            android:maxHeight="100dp"
            android:text="Min education level"
            android:textColor="@color/text_green" />

        <ListView
            android:id="@+id/selectedEduListView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/minEduTV"
            android:visibility="visible">

        </ListView>

        <Button
            android:id="@+id/selectReqEduBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectedEduListView"
            android:layout_centerHorizontal="true"
            android:text="Select Required Education"
            android:textColor="@color/text_green" />

        <!--   <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scrollbarAlwaysDrawVerticalTrack="true"
               android:scrollbars="vertical">

               <com.wefika.flowlayout.FlowLayout
                   android:id="@+id/hashTagFL"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/border"
                   android:gravity="start|top">

               </com.wefika.flowlayout.FlowLayout>
           </ScrollView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Separate each tag with comma. (Eg: #IT, #Sales)"
               android:textColor="@color/text_green"
               android:textSize="12sp" />-->
    </RelativeLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:text="I'm done! Next!"
        android:textColor="@color/text_green" />
</LinearLayout>
