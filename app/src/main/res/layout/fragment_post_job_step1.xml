<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stepTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="STEP 1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text_default_material_light" />

        <AutoCompleteTextView
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Give a job title"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/choosePhotoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Choose photo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_green" />

        <ImageButton
            android:id="@+id/addImageBtn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Job Category"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_green" />

        <ListView
            android:id="@+id/selectedJobCategoryListView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:divider="#00FFCC00"
            android:dividerHeight="0dp"
            android:focusable="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/selectJobCatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Select Job Catergory"
            android:textColor="@color/text_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.4"
        android:gravity="bottom">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK! That's easy!"
            android:textColor="@color/text_green" />
    </LinearLayout>
</LinearLayout>
