<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/topContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/userInfo_relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/userIV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/jiffyjob" />

                    <TextView
                        android:id="@+id/companyNameTV"
                        style="@style/TextAppearance.Green.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/userIV"
                        android:layout_toRightOf="@+id/userIV"
                        android:text="Company name"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/companyNameTV"
                        android:layout_toRightOf="@id/userIV" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical">

                  <!--  <ImageButton
                        android:id="@+id/shareBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_state_share_green" />

                    <CheckBox
                        android:id="@+id/favoriteCB"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@+id/shareBtn"
                        android:button="@drawable/btn_state_starred_green"
                        android:scaleType="fitCenter" />-->

                    <TextView
                        android:id="@+id/datePostedTV"
                        style="@style/TextAppearance.Grey.Small"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/shareBtn"
                        android:gravity="right"
                        android:text="days ago" />
                </RelativeLayout>
            </RelativeLayout>

            <!--Map layout-->
            <RelativeLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--class="com.google.android.gms.maps.MapFragment"-->
                <RelativeLayout
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Grey.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="People you might know have joined" />

                <HorizontalScrollView
                    android:id="@+id/horScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:id="@+id/friendIconLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

            </LinearLayout>

            <!--Description 1 and 2-->
            <TextView
                android:id="@+id/jobTitleTV"
                style="@style/TextAppearance.Grey.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="Job title"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/jobSummary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <!--Calender text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/calenderIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_event_note_green_48dp" />

                    <TextView
                        android:id="@+id/calenderTV"
                        style="@style/TextAppearance.Grey.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Calender text" />
                </LinearLayout>

                <!--Time text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/timeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_schedule_green_48dp" />

                    <TextView
                        android:id="@+id/timeTV"
                        style="@style/TextAppearance.Grey.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Time icon text" />
                </LinearLayout>

                <!--location text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_place_green_48dp" />

                    <TextView
                        android:id="@+id/locationTV"
                        style="@style/TextAppearance.Grey.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Location icon text" />
                </LinearLayout>

                <!--payment text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/paymentIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_attach_money_green_48dp" />

                    <TextView
                        android:id="@+id/paymentTV"
                        style="@style/TextAppearance.Grey.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Payment icon text" />
                </LinearLayout>

                <!--recruitment text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/recruitmentIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_group_green_48dp" />

                    <TextView
                        android:id="@+id/recruitmentTV"
                        style="@style/TextAppearance.Grey.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Recruitment icon text" />

                </LinearLayout>

                <!--<LinearLayout
                    android:id="@+id/scopeListLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:orientation="vertical" />-->
                <TextView
                    android:id="@+id/scopeTV"
                    style="@style/TextAppearance.Grey.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_state_green_textbtn"
        android:text="APPLY"
        android:textColor="@color/text_white" />
</RelativeLayout>
