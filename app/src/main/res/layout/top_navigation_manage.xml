<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/jj_green"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn0LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ripple_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn0IV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/confirmed_jobs" />

        <View
            android:id="@+id/underline0"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/text_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn1LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ripple_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn1IV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/pending_jobs" />

        <View
            android:id="@+id/underline1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/text_white"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn2LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ripple_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn2IV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/completed_jobs" />

        <View
            android:id="@+id/underline2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/text_white"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
